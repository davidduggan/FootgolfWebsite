<div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Change Your Password Below 
            </div>
            <div class="card-body">
                <form action="/auth/password" method="POST">
                <div class="form-group">
                    <label for="changePassword">Password</label>
                    <input type="password" class="form-control" id="changePassword" name="changePassword">
                </div>
                <div class="form-group">
                    <label for="changePasswordConfirm">Confirm Password</label>
                    <input type="password" class="form-control" id="changePasswordConfirm" name="changePasswordConfirm">
                </div>
                <br>
             <button type="submit" class="btn btn-danger">Change Password</button>
             <br><br>
            <a href="/profile" class="btn btn-primary" role="button">Return to Profile</a>
             
                </form>
            </div>
        </div>
        {{#if message }}
            <h4 class="alert alert-danger mt-4">{{message}}</h4>
        {{/if}}
    </div>
